<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/color_bg"
    android:padding="50dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/title"
        android:textSize="42sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dip"
        android:textColor="@color/txt_color_title"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 PLAYERS"
        android:id="@+id/btn_gamemode_twoPlayer"
        android:onClick="onClickGameMode"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/txt_color_btn"
        android:background="@drawable/chunkybutton"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER VS AI"
        android:id="@+id/btn_gamemode_AI"
        android:onClick="onClickGameMode"
        android:layout_below="@+id/btn_gamemode_twoPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/txt_color_btn"
        android:background="@drawable/chunkybutton"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MULTIPLAYER"
        android:id="@+id/btn_gamemode_multiPlayer"
        android:onClick="onClickGameMode"
        android:layout_below="@+id/btn_gamemode_AI"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/txt_color_btn"
        android:background="@drawable/chunkybutton"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

</RelativeLayout>
