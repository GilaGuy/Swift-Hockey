<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="insertcreativecompanynamehere.swifthockey">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Google Play filtering -->
    <uses-feature
        android:name="android.hardware.wifi.direct"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="teamturbo.swifthockey.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="teamturbo.swifthockey.GameActivitySP"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:configChanges="orientation"></activity>
        <activity
            android:name="insertcreativecompanynamehere.swifthockey.GameActivityAI"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:configChanges="orientation"></activity>
        <activity
            android:name="teamturbo.swifthockey.GameActivityMP"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation"></activity>
    </application>

</manifest>
